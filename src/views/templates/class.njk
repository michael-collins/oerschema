{% extends "templates/base.njk" %}
{% import "macros/schema.njk" as macros %}

{% set action = 'schema' %}
{% set obj = schema.classes[objName] %}
{% set title = objName %}

{% block content %}
    <div class="schema-content container max-w-4xl mx-auto" vocab="http://oerschema.org/" typeof="rdfs:Class" resource="http://oerschema.org/{{ obj.label }}">
        <span class="float-right text-neutral-500">v{{ schema.version }}</span>
        <h1 property="rdfs:label" class="text-3xl font-bold mb-4">{{ obj.label }}</h1>
        {% if property.alternateType %}
            <link property="alternateType" href="{{ property.alternateType }}">
        {% endif %}
        {% if property.alternateName %}
            <meta property="alternateName" content="{{ property.alternateName}}">
        {% endif %}
        <div class="breadcrumbs mb-4">
            <div class="flex flex-wrap gap-1 items-center">
                {{ macros.schema_class_breadcrumbs(obj, schema) }}
            </div>
        </div>
        <p property="rdfs:comment" class="mb-6">{{ obj.comment }}</p>
        
        <div class="mb-8">
            {{ macros.schema_class_table(obj, schema) }}
        </div>
        
        <h2 class="text-xl font-semibold mb-3">"{{ obj.label}}" is the value type for Properties:</h2>
        <div class="mb-6">
            {{ macros.schema_class_for_props(obj.label, schema) }}
        </div>
        
        <h2 class="text-xl font-semibold mb-3">Usage Examples</h2>
        <div class="mb-6">
            {{ macros.schema_code_samples(objName) }}
        </div>
        
        <h2 class="text-xl font-semibold mb-3">More specific Types</h2>
        <div class="mb-6">
            {{ macros.schema_class_dependencies(objName, schema) }}
        </div>
    </div>
{% endblock %}